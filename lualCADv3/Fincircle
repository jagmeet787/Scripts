==========================================================================================================================================
--------------------------------	  	     F in circle	   		--------------------------------------------------
------------------------------------------------------------------------------------------------------------------------------------------

layer=active.proxy.layerByName("0")
doc=active.document()
bobj=Builder(doc)

--function of line

function lline(x,y,xx,yy)

line1 = Line(Coord(x,y),Coord(xx,yy),layer)

bobj:append(line1):execute()
end

--right

lline(0,0,50,0)
lline(50,0,50,50)
lline(50,50,0,50)

--left

lline(-50,50,-100,50)
lline(-100,50,-100,0)
lline(-100,0,-50,0)

--top

lline(-50,0,-50,-50)
lline(0,0,0,-50)
--lline(50,50,0,50)

--down

lline(0,50,0,100)
lline(-50,100,-50,50)
--lline(50,50,0,50)

arct1=Arc(Coord(50,-50),50,math.rad(180),math.rad(0),layer)
arct2=Arc(Coord(50,-50),100,math.rad(180),math.rad(0),layer)
lline(100,-50,150,-50)

arcd1=Arc(Coord(-100,100),50,math.rad(0),math.rad(90),layer)
arcd2=Arc(Coord(-100,100),100,math.rad(0),math.rad(90),layer)
lline(-100,150,-100,200)

bobj:append(arct1):append(arct2):append(arcd1):append(arcd2):execute()

