layer=active.proxy.layerByName("0")
doc=active.document()
bobj=Builder(doc)
 
--function line

function lline(x,y,xx,yy)

line1 = Line(Coord(x,y),Coord(xx,yy),layer)

bobj:append(line1):execute()
end

--left

lline(-30,0,-130,-30)
lline(-130,-30,-130,60)
lline(-130,60,-30,30)

--down

lline(-30,30,-60,130)
lline(-60,130,30,130)
lline(30,130,0,30)


--top

lline(0,0,30,-100)
lline(30,-100,-60,-100)
lline(-60,-100,-30,0)

--right

lline(0,30,100,60)
lline(100,60,100,-30)
lline(100,-30,0,0)

