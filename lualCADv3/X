layer=active.proxy.layerByName("0")
doc=active.document()
bobj=Builder(doc)

--function of line

function lline(x,y,xx,yy)

line1 = Line(Coord(x,y),Coord(xx,yy),layer)

bobj:append(line1):execute()
end


lline(0,100,25,0)
lline(25,0,125,0)
lline(125,0,25,100)
lline(25,100,80,200)
lline(80,200,0,100)
lline(0,100,-80,200)
lline(-80,200,-25,100)
lline(-25,100,-125,0)
lline(-125,0,-25,0)
lline(-25,0,0,100)

