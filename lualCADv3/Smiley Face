--------------------------------	  	     Smiley face     			--------------------------------------------------
------------------------------------------------------------------------------------------------------------------------------------------

//Smiley face
layer=active.proxy.layerByName("0")
doc=active.document()

bobj=Builder(doc)

he=Arc(Coord(0,0),50,math.rad(0),math.rad(360),layer)
e1=Circle(Coord(25,-25),3,layer)
e2=Circle(Coord(-25,-25),3,layer)

l1=Arc(Coord(0,0),30,math.rad(15),math.rad(165),layer)

bobj:append(he):append(e1):append(e2):append(l1)
bobj:execute()

