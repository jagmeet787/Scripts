layer=active.proxy.layerByName("0")
doc=active.document()
bobj=Builder(doc)

--function of line

function lline(x,y,xx,yy)

line1 = Line(Coord(x,y),Coord(xx,yy),layer)

bobj:append(line1):execute()
end

--right

lline(0,0,50,0)
lline(50,0,50,50)
lline(50,50,0,50)

--left

lline(-50,50,-100,50)
lline(-100,50,-100,0)
lline(-100,0,-50,0)

--top

lline(-50,0,-50,-50)
lline(0,0,0,-50)
lline(-50,-50,0,-50)

--down

lline(0,50,0,200)
lline(-50,200,-50,50)
lline(0,200,-50,200)

